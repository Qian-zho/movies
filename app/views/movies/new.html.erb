<%= render "form", movie: @movie %>

<%= form_for @movie do |f| %>
  <p>
    <%= f.label :title %>:
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :synopsis %>:
    <%= f.text_area :synopsis %>
  </p>

  <p>
    <%= f.label :year %>:
    <%= f.text_field :year %>
  </p>

  <p>
    <%= f.submit "Create Movie" %>
  </p>

<% end %>
